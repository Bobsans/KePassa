<Window x:Class="SecretStore.Ui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SecretStore"
        xmlns:model="clr-namespace:SecretStore.Ui.Model"
        xmlns:data="clr-namespace:SecretStore.Data"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance model:SettingsWindowViewModel}"
        Title="Settings"
        Height="450"
        Width="800">
  <DockPanel>
    <TreeView Name="TreeViewSidebar" Width="200" ItemsSource="{Binding Groups}">
      <TreeView.Resources>
        <HierarchicalDataTemplate DataType="{x:Type model:SettingGroupViewModel}" ItemsSource="{Binding Children}">
          <TextBlock Text="{Binding Name}" />
        </HierarchicalDataTemplate>
      </TreeView.Resources>
    </TreeView>
    <DockPanel>
      <Frame Name="FrameContent" Source="BlankPage.xaml" NavigationUIVisibility="Hidden"/>
    </DockPanel>
  </DockPanel>
</Window>
