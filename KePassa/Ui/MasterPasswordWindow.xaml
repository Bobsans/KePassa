<Window x:Class="SecretStore.Ui.MasterPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:model="clr-namespace:SecretStore.Ui.Model"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance model:MasterPasswordWindowViewModel}"
        Title="Set master password"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
  <StackPanel Margin="5" Width="300">
    <DockPanel Margin="0,0,0,5">
      <TextBlock Text="Password:" Width="100" />
      <TextBox Text="{Binding Password}"/>
    </DockPanel>
    <DockPanel Margin="0,0,0,5">
      <TextBlock Text="Confirm:" Width="100" />
      <TextBox Text="{Binding Confirm}" />
    </DockPanel>
    <Button Click="ButtonOkOnClick">OK</Button>
  </StackPanel>
</Window>
